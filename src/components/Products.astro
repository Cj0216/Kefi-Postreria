---
import type { ImageMetadata } from "astro";

import donas from "../assets/donas.jpeg";
import tira from "../assets/tira.jpeg";
import brow from "../assets/brow.jpeg";

interface Product {
  name: string;
  img: ImageMetadata;
  price: string;
  description: string;
}

const products: Product[] = [
  { 
    name: "Donas personalizadas", 
    img: donas, 
    price: "$60 MXN",
    description: "Nuestras Donas Personalizadas te permiten dar rienda suelta a tu creatividad. Elige tu masa favorita, glaseados vibrantes, y una variedad de toppings divertidos (chispas, chocolates, frutos secos, ¡lo que imagines!). Son perfectas para celebraciones, regalos únicos o simplemente para crear la dona de tus sueños, bocado a bocado."
  },
  { 
    name: "Tiramisú", 
    img: tira, 
    price: "$75 MXN",
    description: "Un postre clásico e irresistible. Elaborado con capas suaves de bizcochos de soletilla bañados en un intenso café espresso, intercaladas con una crema mascarpone suave y aireada. Espolvoreado con cacao puro, este manjar es la combinación perfecta de dulzor, amargor y cremosidad que te transportará directamente a Roma."
  },
  { 
    name: "Brownie de chocolate", 
    img: brow, 
    price: "$50 MXN",
    description: "Nuestros Brownies son la definición de la perfección chocolatera. Con una característica capa superior delgada y ligeramente crujiente, el interior es denso, húmedo y profundamente chocolatoso. Un postre versátil y reconfortante, disponible en versiones clásicas o con nueces, fudge o chispas extra. ¡La dosis de felicidad que necesitas!"
  },
];
---

<section id="productos" class="py-20 bg-pink-50 text-center">
  <h2 class="text-3xl font-bold text-gray-800 mb-10">Nuestros Postres Estrella</h2>
  <div class="grid md:grid-cols-3 gap-8 px-6">
    {products.map(product => (
      <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition transform hover:-translate-y-2 duration-300 animate-fadeIn relative">
        <div class="rounded-t-xl overflow-hidden relative">
          <!-- Badge de precio -->
          
          <img
            src={product.img.src}
            alt={product.name}
            width={product.img.width}
            height={product.img.height}
            class="w-full h-80 object-cover"
            loading="lazy"
          />
        </div>
        <div class="p-4 space-y-2">
          <h3 class="text-xl font-semibold text-gray-700">{product.name}</h3>
<span class="inline-flex items-center rounded- bg-pink-400/10 px-2 py-1 text-xs font-medium text-pink-500 inset-ring inset-ring-pink-500/20 backdrop-blur-sm shadow-sm">
            {product.price}
          </span>
          <p class="text-sm text-gray-500">{product.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>
