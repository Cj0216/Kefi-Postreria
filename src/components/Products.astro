---
import type { ImageMetadata } from "astro";

import donas from "../assets/donas.jpeg";
import tira from "../assets/tira.jpeg";
import brow from "../assets/brow.jpeg";

interface Product {
  name: string;
  img: ImageMetadata;
}

const products: Product[] = [
  { name: "Donas personalizadas", img: donas },
  { name: "Tiramis√∫", img: tira },
  { name: "Brownie de chocolate", img: brow },
];
---
<section id="productos" class="py-20 bg-pink-50 text-center">
  <h2 class="text-3xl font-bold text-gray-800 mb-10">Nuestros Postres Estrella</h2>
  <div class="grid md:grid-cols-3 gap-8 px-6">
    {products.map(product => (
      <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition transform hover:-translate-y-2 duration-300 animate-fadeIn">
        <div class="rounded-t-xl overflow-hidden">
          <img
            src={product.img.src}
            alt={product.name}
            width={product.img.width}
            height={product.img.height}
            class="w-full h-80  object-cover"
            loading="lazy"
          />
        </div>
        <div class="p-4">
          <h3 class="text-xl font-semibold text-gray-700">{product.name}</h3>
        </div>
      </div>
    ))}
  </div>
</section>
